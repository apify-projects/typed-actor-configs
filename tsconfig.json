{
    "extends": "@apify/tsconfig",
    "files": ["./index.ts"],
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ES2022",
        "outDir": "dist",
        "strict": true,
        "noUnusedLocals": false,
        "skipLibCheck": true,
        "rewriteRelativeImportExtensions": true,
        "lib": ["ESNext"]
    },
    "include": ["./src/**/*", "index.ts"],
    "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
